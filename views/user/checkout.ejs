<%- include('../partials/userHeader') %>

  <!-- Heading -->
  <div class="bg-primary shadow-lg">
    <div class="container py-3 shadow-lg">
        <!-- Breadcrumb -->
        <nav class="d-flex">
            <h5 class="mb-0">
                <a href="/" class="text-white-50" style="text-decoration: none;">Home</a>
                <span class="text-white-50 mx-2"> > </span>
                <a href="/user/viewCart" class="text-white-50" style="text-decoration: none;">Cart</a>
                <span class="text-white mx-2"> > </span>
                <a href="/user/checkout" class="text-white" style="text-decoration: none;">Checkout</a>
            </h5>
        </nav>
        <!-- Breadcrumb -->
    </div>
  </div>


  <section class="bg-light py-5">
    <div class="container">
      <div class="row">
        <div class="col-xl-8 col-lg-8 mb-4">

          <!-- Checkout -->
          <div class="card shadow-0 border">
            <div class="p-4">
              <form action="/user/placeOrder" method="POST">
                <h5 class="card-title mb-3">Shipping address</h5> <!-- Changed to Shipping address -->
                <div class="row">
                  <input type="hidden" name="cartId" value="<%= cart._id %>">
                  <div class="col-12 mb-0">
                    <p class="mt-4 mb-0">Select address</p><br>
                    <div class="form-outline">
                      <% if (address.length> 0) { %>
                        <select name="addressId" id="addressSelect" class="form-select">
                          <% address.forEach(element=> { %>
                            <option value="<%= element._id %>">
                              <%= element.name %>, <%= element.address %>
                            </option>
                            <% }) %>
                        </select>
                        <% } else { %>
                          <button class="btn btn-success">
                            <a href="address" style="text-decoration: none; color: inherit;">Add Address</a>
                          </button>
                          <% } %>
                    </div>

                  </div>
                </div>

                <div class="row">
                  <input type="hidden" name="cartId" value="<%= cart._id %>">
                  <div class="col-12 mb-3">
                    <p class="mt-4 mb-0">Coupons </p><br>
                    <div class="form-outline">
                      <% if (filteredCoupons.length> 0) { %>
                        <select name="couponId" id="couponId" class="form-select">
                          <% filteredCoupons.forEach(element=> { %>
                            <option value="0">
                              Apply No coupon
                            </option>
                            <option value="<%= element._id %>">
                              <%= element.code %>
                            </option>
                            <% }) %>
                        </select>
                        <% } else { %>
                          <select name="addressId" id="addressSelect" class="form-select">
                            <option value="0">
                              "No coupons available"
                            </option>
                          </select>
                          <% } %>
                    </div>

                  </div>
                </div>

                <!-- Additional fields for shipping information can be added here -->

                <div class="form-check">

                </div>

                <hr class="my-4" />

                <h5 class="card-title mb-3">Payment method</h5>

                <div class="row mb-3">
                  <div class="col-lg-4 mb-3">
                    <!-- Default checked radio -->
                    <div class="form-check h-100 border rounded-3">
                      <div class="p-3">
                        <input class="form-check-input" type="radio" name="PaymentMethod" value="COD"
                          id="flexRadioDefault1" <%=totalAmount < 1000 ? "checked" : "disabled" %>/>
                        <label class="form-check-label" for="flexRadioDefault1">
                          Cash On Delivery <br />
                          <small class="text-muted"><%=totalAmount < 1000 ? "Pay when product is delivered" : "Amount too high for COD" %> </small>
                        </label>
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-4 mb-3">
                    <!-- Default radio -->
                    <div class="form-check h-100 border rounded-3">
                      <div class="p-3">
                        <input class="form-check-input" type="radio" name="PaymentMethod" value="Razor Pay"
                          id="flexRadioDefault2" />
                        <label class="form-check-label" for="flexRadioDefault2">
                          Razor Pay <br />
                          <small class="text-muted">Avail extra offers when using bank cards </small>
                        </label>
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-4 mb-3">
                    <!-- Default radio -->
                    <div class="form-check h-100 border rounded-3">
                      <div class="p-3">
                        <input class="form-check-input" type="radio" name="PaymentMethod" value="M&G Wallet"
                          id="flexRadioDefault3" <%=user.wallet>= totalAmount ? "" : "disabled" %> />
                        <label class="form-check-label" for="flexRadioDefault3">
                          M&G Wallet<br />
                          <small class="text-muted">
                            Your balance : <%= user.wallet %>
                          </small> <br>
                          <small class="text-muted">
                            Use your amount kept with us to make this purchase !
                          </small>
                        </label>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="float-end">
                  <a href="/">
                    <button class="btn btn-secondary shadow-0 border">Cancel</button>
                  </a>
                  <button class="btn btn-success shadow-0 border" type="submit">Place Order</button>
                </div>
            </div>
          </div>
          </form>
          <!-- Checkout -->
        </div>
        <div class="col-xl-4 col-lg-4 d-flex justify-content-center justify-content-lg-end">
          <div class="ms-lg-4 mt-4 mt-lg-0" style="max-width: 320px;">
            <h6 class="mb-3">Summary</h6>
            <div class="d-flex justify-content-between">
              <p class="mb-2">Price:</p>
              <p class="mb-2">$<%= totalAmount %>
              </p>
            </div>
            <div class="d-flex justify-content-between">
              <p class="mb-2" >Discount Percentage:</p>
              <p class="mb-2 text-danger" id="DiscountElement">- $00.00</p>
            </div>
            <hr />
            <div class="d-flex justify-content-between">
              <p class="mb-2">Total price:</p>
              <p class="mb-2 fw-bold" id="totalAmountElement">$<%= totalAmount %>
              </p>
            </div>

            <hr />
            <h6 class="text-dark my-4">Items in cart</h6>

            <% cart.products.forEach((product, index)=> { %>
              <div class="d-flex align-items-center mb-4">
                <div class="me-3 position-relative">
                  <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill badge-secondary">
                    <%= index + 1 %>
                  </span>
                  <img src="/<%= product.productId.images[0] %>" style="height: 96px; width: 96px;"
                    class="img-sm rounded border" />
                </div>
                <div class="">
                  <a href="/user/productDetailed/<%= product.productId._id %>" class="nav-link">
                    <%= product.productId.name %>
                  </a><br>
                  <p>Quantity: <%= product.quantity %>
                  </p>
                  <div class="price text-muted">Total: $<%= (product.productId.rate * product.quantity).toFixed(2) %>
                  </div>
                </div>
              </div>
              <% }) %>


          </div>
        </div>
      </div>
    </div>
  </section>

  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>


  <script>
document.addEventListener('DOMContentLoaded', function () {
  const razorpayRadio = document.getElementById('flexRadioDefault2');
  const placeOrderButton = document.querySelector('button[type="submit"]');
  const form = document.querySelector('form[action="/user/placeOrder"]');
  let razorpayAmount = `<%= totalAmount %>` * 100; // Store the initial total amount in paise

  placeOrderButton.addEventListener('click', function (event) {
    if (razorpayRadio.checked) {
      event.preventDefault();

      // Razorpay configuration options
      const options = {
        key: "rzp_test_VsFnNZA1nNcWZT", // Enter your Razorpay Key ID
        amount: razorpayAmount, // Use the updated amount in paise
        currency: "INR",
        name: "Meat & Greet",
        description: "Food Purchased from M&G",
        image: "https://your_logo_url.com", // Optional: Add your logo URL here
        handler: function (response) {
          // After successful payment
          form.submit();
        },
        prefill: {
          name: "<%= user.name %>", // Prefill customer's name from user data
          email: "<%= user.email %>", // Prefill customer's email from user data
          contact: "<%= user.contact %>" // Prefill customer's phone from user data
        },
        theme: {
          color: "#3399cc" // Custom theme color
        },
        modal: {
          ondismiss: function () {
            alert("Payment process was interrupted. Please try again."); // Handle payment failure or cancellation
          },
          onpaymentfailed: function () {
            // Handle payment failure
          }
        }
      };

      // Create a new Razorpay instance with the configuration options
      const rzp = new Razorpay(options);
      rzp.open(); // Open the Razorpay payment modal
    } else {
      form.submit(); // If Razorpay is not selected, submit the form normally
    }
  });

  const couponSelect = document.getElementById('couponId');
  const totalAmountElement = document.getElementById('totalAmountElement');
  const DiscountElement = document.getElementById('DiscountElement')
  const originalTotalAmount = parseFloat(totalAmountElement.textContent.replace('$', ''));

  couponSelect.addEventListener('change', async function () {
    const couponId = this.value;

    if (couponId === '0') {
      // If no coupon is selected, reset the total amount
      totalAmountElement.textContent = `$${originalTotalAmount.toFixed(2)}`;
      razorpayAmount = originalTotalAmount * 100; // Update the Razorpay amount
      return;
    }

    try {
      // Fetch the discount percentage for the selected coupon
      const response = await axios.get(`/user/getcouponData/${couponId}`);
      const coupon = response.data;

      if (coupon && coupon.discountPercentage) {
        // Calculate the discount and new total amount
        const discountAmount = (originalTotalAmount * coupon.discountPercentage) / 100;
        const newTotalAmount = originalTotalAmount - discountAmount;

        // Update the total amount in the UI
        totalAmountElement.textContent = `$${newTotalAmount.toFixed(2)}`;
        DiscountElement.textContent = `${coupon.discountPercentage} %`;
        razorpayAmount = newTotalAmount * 100; // Update the Razorpay amount
      }
    } catch (error) {
      console.error('Error fetching coupon details:', error);
    }
  });
});
  </script>


  <%- include('../partials/footer') %>